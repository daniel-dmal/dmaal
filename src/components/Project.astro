---
import AnimatedProjectText from './AnimatedProjectText';
import ProjectModal from './ProjectModal';
const { title, description, link, techStack, direction } = Astro.props;
---

<article class="w-full relative flex flex-col items-start">
    <AnimatedProjectText text={title + " "} direction={direction} page={false} client:visible  />
    <h2 class="absolute text-transparent z-[-10] "  >
        {title}
    </h2>
    <div class="w-full flex items-center justify-between relative lg:flex-row flex-col gap-[12px] px-[16px]   " >
        <ProjectModal project={{title, description, techStack, link}} client:visible />
        <img src={`/images/${title.toLowerCase()}1.webp`} alt="Project Image" 
        class={`w-full md:block hidden md:max-h-[90vh] min-h-[60vh] lg:min-h-[70vh] object-cover rounded-[8px]`} />
        <img src={`/images/${title.toLowerCase()}1mobile.webp`} alt="Project Image"
        class={`w-full md:hidden block md:max-h-[90vh] min-h-[60vh] lg:min-h-[70vh] object-cover rounded-[8px]`} />
    </div>
    <div class="w-full pt-[12px] pb-[72px] flex flex-row justify-end gap-[12px] px-[16px] " >
        {techStack?.map((tech: string, index:number) => (
            <div class="px-3 py-1 border-2 border-white rounded-[4px] " >
                <p class="text-white text-[14px] tracking-wide font-medium " >
                    {tech}
                </p>
            </div>
        ))}
        </div>
</article>